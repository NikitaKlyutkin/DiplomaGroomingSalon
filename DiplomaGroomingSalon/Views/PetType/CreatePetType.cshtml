@model DiplomaGroomingSalon.Domain.ViewModels.PetTypeViewModel

@{
    ViewData["Title"] = "Create Pet Type";
}

<h1>Create Pet Type</h1>

<h4>Create a pet type for a client</h4>
<p>
    <a asp-action="CreatePetType">Create New Pet Type</a>
</p>
<p>
    <a asp-controller="Breed" asp-action="CreateBreed">Create New Breed</a>
</p>
<p>
    <a asp-controller="ServiceType" asp-action="CreateServiceType">Create New Service Type</a>
</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePetType">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PetTypeName" class="control-label"></label>
                <input asp-for="PetTypeName" class="form-control" />
                <span asp-validation-for="PetTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetPetTypes">Back to List Pet Types</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
